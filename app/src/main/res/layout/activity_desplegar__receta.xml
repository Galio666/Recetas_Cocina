<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Desplegar_Receta">

    <ImageView
        android:id="@+id/imagenReceta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/dificultadReceta"
        app:layout_constraintEnd_toEndOf="@+id/tituloReceta"
        app:layout_constraintStart_toStartOf="@+id/dificultadReceta"
        app:layout_constraintTop_toBottomOf="@+id/detalleReceta"
        app:srcCompat="@color/browser_actions_bg_grey" />

    <RatingBar
        android:id="@+id/dificultadReceta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toTopOf="@+id/ingredientesReceta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenReceta" />

    <TextView
        android:id="@+id/tituloReceta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="11dp"
        android:isIndicator="true"
        android:text="Prueba2"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/detalleReceta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detalleReceta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:isIndicator="true"
        android:text="prueba"
        app:layout_constraintBottom_toTopOf="@+id/imagenReceta"
        app:layout_constraintStart_toStartOf="@+id/tituloReceta"
        app:layout_constraintTop_toBottomOf="@+id/tituloReceta" />

    <TextView
        android:id="@+id/ingredientesReceta"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="133dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/preparacionReceta"
        app:layout_constraintStart_toStartOf="@+id/dificultadReceta"
        app:layout_constraintTop_toBottomOf="@+id/dificultadReceta" />

    <TextView
        android:id="@+id/preparacionReceta"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="150dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredientesReceta" />


</androidx.constraintlayout.widget.ConstraintLayout>